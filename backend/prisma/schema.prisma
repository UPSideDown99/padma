generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String    @default("user") // 'user' | 'admin' | 'driver'
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Vehicle {
  id         Int       @id @default(autoincrement())
  name       String
  plate      String    @unique
  type       String    // 'biasa' | 'mewah'
  pricePerKm Float
  status     String    @default("available") // 'available'|'on_trip'|'maintenance'
  bookings   Booking[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Booking {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id])
  userId        Int
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id])
  vehicleId     Int
  startAddress  String
  endAddress    String
  startLat      Float
  startLng      Float
  endLat        Float
  endLng        Float
  price         Float
  status        String    @default("pending") // pending|confirmed|enroute|completed|cancelled
  paymentStatus String    @default("unpaid")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
